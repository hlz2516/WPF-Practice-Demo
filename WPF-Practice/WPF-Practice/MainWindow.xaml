<Window x:Class="WPF_Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="layout_vertical">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>
                <Grid.Children>
                    <StackPanel Grid.Column="0"  Margin="4" CanVerticallyScroll="True">
                        <Button Height="30">布局设置</Button>
                        <Button Height="30">背景切换</Button>
                        <Button Height="30">留言板</Button>
                    </StackPanel>

                    <DockPanel Grid.Column="1">

                    </DockPanel>
                </Grid.Children>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="layout_horizental">
            <Grid ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"  />
                    <RowDefinition Height="9*" />
                </Grid.RowDefinitions>
                <Grid.Children>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Button Width="120">布局设置</Button>
                        <Button Width="120">背景切换</Button>
                        <Button Width="120">留言板</Button>
                    </StackPanel>
                    
                    <DockPanel Grid.Row="1">

                    </DockPanel>
                </Grid.Children>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <DataGrid  Template="{DynamicResource layout_horizental}"></DataGrid>
</Window>
